<h1>Instagram Sample App</h1>

<h2>Popular The Photo</h2>

<% if @medias.nil? %>
  データがありません。
<% else %>
  <% @medias.each do |media| %>
    <%= link_to media.link, :target => "_blank" do %>
    	<%= image_tag(media.images.low_resolution.url) %>
    <% end %>
  <% end %>
<% end %>

<h2>Search The Photo</h2>

<%= form_tag('/', :method => "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search], placeholder: "Search The Photo" %>
  <%= submit_tag "Search", :name => nil %>
<% end %>
<br>
<% if @searched_medias.nil? %>
  データがありません。
<% else %>
  <% @searched_medias.each do |searched_media| %>
    <%= link_to searched_media.link, :target => "_blank" do %>
    	<%= image_tag(searched_media.images.low_resolution.url) %>
    <% end %>
  <% end %>
<% end %>